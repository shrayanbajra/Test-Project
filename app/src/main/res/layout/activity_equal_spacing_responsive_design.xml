<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.equal_spacing_responsive_design.EqualSpacingResponsiveDesignActivity">

    <TextView
        android:id="@+id/tv_number_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="22sp"
        android:textColor="@android:color/black"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_number_2"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:maxWidth="50dp"
        app:layout_constraintStart_toStartOf="@id/tv_number_1"
        app:layout_constraintTop_toBottomOf="@id/tv_number_1"
        tools:text="@tools:sample/lorem/random" />

    <TextView
        android:id="@+id/tv_number_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="@android:color/black"
        android:text="2"
        app:layout_constraintBottom_toBottomOf="@id/tv_number_1"
        app:layout_constraintEnd_toStartOf="@id/tv_number_3"
        app:layout_constraintStart_toEndOf="@id/tv_number_1"
        app:layout_constraintTop_toTopOf="@id/tv_number_1" />

    <TextView
        android:id="@+id/tv_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="50dp"
        android:textSize="11sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@id/tv_number_2"
        app:layout_constraintStart_toStartOf="@id/tv_number_2"
        app:layout_constraintTop_toBottomOf="@id/tv_number_2"
        tools:text="@tools:sample/lorem/random" />

    <TextView
        android:id="@+id/tv_number_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="@android:color/black"
        android:text="3"
        app:layout_constraintBottom_toBottomOf="@id/tv_number_2"
        app:layout_constraintEnd_toStartOf="@id/tv_number_4"
        app:layout_constraintStart_toEndOf="@id/tv_number_2"
        app:layout_constraintTop_toTopOf="@id/tv_number_2" />

    <TextView
        android:id="@+id/tv_text_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="50dp"
        android:textSize="11sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@id/tv_number_3"
        app:layout_constraintStart_toStartOf="@id/tv_number_3"
        app:layout_constraintTop_toBottomOf="@id/tv_number_3"
        tools:text="@tools:sample/lorem/random" />

    <TextView
        android:id="@+id/tv_number_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="@android:color/black"
        android:text="4"
        app:layout_constraintBottom_toBottomOf="@id/tv_number_3"
        app:layout_constraintEnd_toStartOf="@id/tv_number_5"
        app:layout_constraintStart_toEndOf="@id/tv_number_3"
        app:layout_constraintTop_toTopOf="@id/tv_number_3" />

    <TextView
        android:id="@+id/tv_text_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="50dp"
        android:textAlignment="center"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="@id/tv_number_4"
        app:layout_constraintStart_toStartOf="@id/tv_number_4"
        app:layout_constraintTop_toBottomOf="@id/tv_number_4"
        tools:text="@tools:sample/lorem/random" />

    <TextView
        android:id="@+id/tv_number_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="22sp"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@id/tv_number_4"
        app:layout_constraintEnd_toStartOf="@id/tv_number_6"
        app:layout_constraintStart_toEndOf="@id/tv_number_4"
        app:layout_constraintTop_toTopOf="@id/tv_number_4" />

    <TextView
        android:id="@+id/tv_text_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="50dp"
        android:textAlignment="center"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="@id/tv_number_5"
        app:layout_constraintStart_toStartOf="@id/tv_number_5"
        app:layout_constraintTop_toBottomOf="@id/tv_number_5"
        tools:text="@tools:sample/lorem/random" />

    <TextView
        android:id="@+id/tv_number_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:textSize="22sp"
        android:textColor="@android:color/black"
        android:text="6"
        app:layout_constraintBottom_toBottomOf="@id/tv_number_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_number_5"
        app:layout_constraintTop_toTopOf="@id/tv_number_5" />

    <TextView
        android:id="@+id/tv_text_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="50dp"
        android:textSize="11sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@id/tv_number_6"
        app:layout_constraintStart_toStartOf="@id/tv_number_6"
        app:layout_constraintTop_toBottomOf="@id/tv_number_6"
        tools:text="" />

</androidx.constraintlayout.widget.ConstraintLayout>